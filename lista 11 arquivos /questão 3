using System;
using System.IO;
using System.Text;

namespace Questao03
{
    internal class Program
    {
        static void Main(string[] args)
        {
            ImprimirNomesIdadeEntre10e16();
            Console.ReadLine();
        }

        static void ImprimirNomesIdadeEntre10e16()
        {
            string linha;
            string[] dados;
            int idadeMax;

            try
            {
                StreamReader arq1 = new StreamReader("C:\\Users\\Cliente\\Documents\\Sara MarÃ§al\\Faculdade\\1 semestre\\atp\\lista 11 - arquivos\\arquivo-01.txt", Encoding.UTF8);

                linha = arq1.ReadLine();
                Console.WriteLine("Nomes populares com idade entre 10 e 16 anos:");
                Console.WriteLine();
                while (linha != "")
                {
                    dados = linha.Split(';');
                    idadeMax = int.Parse(dados[4]);
                    if (idadeMax >= 10 && idadeMax <= 16)
                    {
                        Console.WriteLine(dados[0]);
                    }
                    linha = arq1.ReadLine();
                }
                arq1.Close();
            }
            catch (Exception e)
            {
                Console.WriteLine("Exception: " + e.Message);
            }
        }
    }
}
