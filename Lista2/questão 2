using System;

class Program
{
    public static void NumeroExtenso(int num)
    {
      if (num == 0)
      {
          Console.WriteLine("O número digitado foi 'zero'.");
      }

      else if (num == 1)
          Console.WriteLine("O número digitado foi 'um'.");
      else if (num == 2)
          Console.WriteLine("O número digitado foi 'dois'");
      else if (num == 3)
          Console.WriteLine("O número digitado foi 'três'");
      else if (num == 4)
          Console.WriteLine("O número digitado foi 'quatro'");
      else
          Console.WriteLine("Valor inválido");
    }

    public static void Main(string[] args)
    {
      Console.WriteLine("Digite um número entre 0 e 4: ");
      int num = int.Parse(Console.ReadLine());
      NumeroExtenso(num);

        Console.ReadLine();
    }
}
